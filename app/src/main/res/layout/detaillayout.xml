<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_centerVertical="true"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:text="First Name:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:paddingStart="8dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/name_value"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text=""
        android:paddingStart="8dp"
        app:layout_constraintTop_toTopOf="@id/name"
        app:layout_constraintLeft_toRightOf="@id/center_guide"
        app:layout_constraintBottom_toBottomOf="@id/name"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/name"
        android:text="Last Name:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="8dp"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text=""
        android:paddingStart="8dp"
       app:layout_constraintTop_toBottomOf="@id/name_value"
        app:layout_constraintLeft_toRightOf="@id/center_guide"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintTop_toTopOf="@id/title"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/rights"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:text="Job Title:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingStart="8dp"
        android:layout_marginStart="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/rights_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text=""
        android:singleLine="true"
        android:paddingStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/title_value"
        app:layout_constraintLeft_toRightOf="@id/center_guide"
        app:layout_constraintBottom_toBottomOf="@id/rights"
        app:layout_constraintTop_toTopOf="@id/rights"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/rights"
        android:text="Email:"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"

        android:paddingStart="8dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />


    <TextView
        android:id="@+id/Duration_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text=""
        android:paddingStart="8dp"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@id/rights_value"
        app:layout_constraintLeft_toRightOf="@id/center_guide"
        app:layout_constraintBottom_toBottomOf="@id/duration"
        app:layout_constraintTop_toTopOf="@id/duration"
        android:textColor="@color/black"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:id="@+id/center_guide"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.40"
        app:layout_constraintLeft_toRightOf="@id/duration"
        app:layout_constraintGuide_end="20dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>